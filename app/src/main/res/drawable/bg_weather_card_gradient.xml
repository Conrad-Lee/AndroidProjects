<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 渐变：蓝 → 黄（带透明度，融入负一屏背景） -->
    <gradient
        android:startColor="#6647A8FF"
        android:centerColor="#668CCEFF"
        android:endColor="#66FFD46E"
        android:angle="90" />

    <!-- 圆角 -->
    <corners android:radius="20dp" />

    <!-- padding 让内容不顶边 -->
    <padding
        android:left="16dp"
        android:top="20dp"
        android:right="16dp"
        android:bottom="20dp" />
</shape>
