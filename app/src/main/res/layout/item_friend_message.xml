<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#000000">

    <!-- 内容区域（头像 + 文本 + 时间） -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="12dp">

        <!-- 左侧头像 -->
        <FrameLayout
            android:id="@+id/layoutAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ivOnlineDot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="2dp"
                android:src="@drawable/ic_online_dot" />
        </FrameLayout>

        <!-- 中间文本 -->
        <LinearLayout
            android:id="@+id/layoutContent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/layoutAvatar"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvFriendName"
                android:text="好友昵称"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvFriendContent"
                android:text="消息内容"
                android:textColor="#aaaaaa"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 右侧时间 + 未读 -->
        <LinearLayout
            android:id="@+id/layoutRight"

            android:orientation="vertical"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvFriendTime"
                android:text="10:01"
                android:textColor="#999999"
                android:textSize="12sp"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvFriendUnread"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/red_dot_background"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="end"
                />

        </LinearLayout>

    </RelativeLayout>

    <!-- ⭐ 底部分界线（关键） ⭐ -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2A2A2A"
        android:layout_marginLeft="72dp" />
    <!-- 48dp 头像 + 12dp padding + 12dp 内距 = 正好从头像右侧开始 -->

</LinearLayout>
