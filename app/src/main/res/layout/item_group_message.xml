<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#000000">

    <!-- 内容区域 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="12dp">

        <!-- 群聊头像 -->
        <ImageView
            android:id="@+id/ivGroupAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop" />

        <!-- 文本区域（群名称 + 内容） -->
        <LinearLayout
            android:id="@+id/layoutGroupContent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/ivGroupAvatar"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- 群聊名称 -->
            <TextView
                android:id="@+id/tvGroupName"
                android:text="群聊名称"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- 群聊内容-->
            <TextView
                android:id="@+id/tvGroupSenderAndContent"
                android:text="Ooorange：分享[评论]"
                android:textColor="#aaaaaa"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- 右侧时间 + 未读角标 -->
        <LinearLayout
            android:id="@+id/layoutGroupRight"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- 时间 -->
            <TextView
                android:id="@+id/tvGroupTime"
                android:text="18:52"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- 未读角标 -->
            <TextView
                android:id="@+id/tvGroupUnread"
                android:text="65"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/red_dot_background"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2A2A2A"
        android:layout_marginLeft="72dp" />

</LinearLayout>
